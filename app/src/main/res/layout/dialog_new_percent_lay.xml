<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_bg"
    android:layout_height="match_parent"
    android:paddingVertical="@dimen/_40sdp"
    android:paddingHorizontal="@dimen/_25sdp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edt_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/shape_edittext15r"
        android:fontFamily="@font/heebo_regular"
        android:gravity="top|start"
        android:inputType="numberDecimal"
        android:lines="1"
        android:hint="Gst Percent"
        android:padding="@dimen/_15sdp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_black"
        android:textSize="@dimen/_12sdp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:cardBackgroundColor="@color/color_primary"
        app:cardCornerRadius="@dimen/_45sdp">

        <TextView
            android:id="@+id/text_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/heebo_regular"
            android:gravity="center"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>


</LinearLayout>